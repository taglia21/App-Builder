# =============================================================================
# LAUNCHFORGE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

# Full PostgreSQL connection URL (recommended)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://launchforge:your_password@localhost:5432/launchforge

# Or configure individually (used if DATABASE_URL not set):
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=launchforge
# DB_USER=launchforge
# DB_PASSWORD=your_secure_password

# Connection pool settings
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Perplexity API (primary provider)
PERPLEXITY_API_KEY=your_perplexity_api_key

# Groq API (secondary/fallback)
GROQ_API_KEY=your_groq_api_key

# OpenAI API (optional)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# API KEYS FOR INTELLIGENCE GATHERING
# =============================================================================

GOOGLE_API_KEY=your_google_api_key
GOOGLE_CSE_ID=your_custom_search_engine_id
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
NEWSAPI_KEY=your_newsapi_key
YOUTUBE_API_KEY=your_youtube_api_key
GITHUB_TOKEN=your_github_token

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379/0

# Slack webhook for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Notification email
NOTIFICATION_EMAIL=your_email@example.com

# =============================================================================
# SECURITY
# =============================================================================

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
# SECRET_KEY=your_secret_key_here

# JWT token expiration in hours
# JWT_EXPIRATION_HOURS=24

# =============================================================================
# DEPLOYMENT PROVIDERS
# =============================================================================

# Vercel
# VERCEL_TOKEN=your_vercel_token

# Netlify
# NETLIFY_TOKEN=your_netlify_token

# Railway
# RAILWAY_TOKEN=your_railway_token

