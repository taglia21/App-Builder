# App-Builder Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Application Settings
# ===================
APP_NAME=App-Builder
ENVIRONMENT=development  # development, staging, production
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string-at-least-32-chars
BASE_URL=http://localhost:8000
APP_VERSION=1.0.0

# Auto-validate configuration on startup (set to false to disable)
AUTO_VALIDATE_CONFIG=true

# ===================
# Database Settings
# ===================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./app.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/appbuilder

# Connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Alternative DB connection params (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=valeric
DB_USER=valeric
DB_PASSWORD=

# ===================
# Redis (Caching & Sessions)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# AI/LLM Configuration
# ===================
# At least one LLM provider required for AI features
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=
GROQ_API_KEY=
PERPLEXITY_API_KEY=

# ===================
# Stripe Payments
# ===================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_API_KEY=sk_test_...  # Alias for STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_GROWTH=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRO_MONTHLY_PRICE_ID=price_...
STRIPE_PRO_YEARLY_PRICE_ID=price_...
STRIPE_PRO_PRODUCT_ID=prod_...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRODUCT_ID=prod_...

# Stripe Atlas (Business Formation)
STRIPE_ATLAS_ENABLED=false
STRIPE_ATLAS_API_KEY=
STRIPE_ATLAS_WEBHOOK_SECRET=

# ===================
# Email Configuration
# ===================
# Option 1: Resend (recommended)
RESEND_API_KEY=re_...

# Option 2: SendGrid
SENDGRID_API_KEY=SG....

# Option 3: SMTP (fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Email addresses
EMAIL_FROM_ADDRESS=noreply@valeric.dev
EMAIL_FROM_NAME=Valeric
ALERT_FROM_EMAIL=alerts@valeric.dev
ALERT_TO_EMAILS=admin@example.com,ops@example.com

# ===================
# OAuth Providers
# ===================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# Deployment Services
# ===================
GITHUB_TOKEN=ghp_...
RAILWAY_TOKEN=
VERCEL_TOKEN=
RENDER_TOKEN=

# ===================
# Domain & DNS Services
# ===================
NAMECHEAP_API_KEY=
NAMECHEAP_API_USER=
NAMECHEAP_USERNAME=
GODADDY_API_KEY=
GODADDY_API_SECRET=
CLOUDFLARE_API_TOKEN=

# ===================
# Business Services
# ===================
# Banking
MERCURY_API_KEY=
RELAY_API_KEY=

# Formation
ZENBUSINESS_API_KEY=

# ===================
# Monitoring & Observability
# ===================
# Sentry (Error Tracking)
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_ENABLE_TRACING=true
SENTRY_ENABLE_PROFILING=false
SENTRY_DEBUG=false

# Logging
LOG_LEVEL=INFO

# ===================
# Alerting
# ===================
# Slack
SLACK_ALERT_WEBHOOK_URL=
SLACK_ALERT_CHANNEL=#alerts

# PagerDuty
PAGERDUTY_ROUTING_KEY=

# Generic Error Webhook
ERROR_WEBHOOK_URL=

# ===================
# External APIs
# ===================
# Research & Data
TAVILY_API_KEY=

# ===================
# Storage
# ===================
STORAGE_PATH=/tmp/valeric_projects
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_PER_MINUTE=60

# ===================
# Analytics (Optional)
# ===================
PLAUSIBLE_DOMAIN=
PLAUSIBLE_ENABLED=false
GOOGLE_ANALYTICS_ID=
GOOGLE_ANALYTICS_API_SECRET=

# ===================
# Demo Mode
# ===================
DEMO_MODE=false

