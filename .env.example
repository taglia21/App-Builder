# App-Builder Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Application Settings
# ===================
APP_NAME=App-Builder
APP_ENV=development  # development, staging, production
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string
BASE_URL=http://localhost:8000

# ===================
# Database Settings
# ===================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./app.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/appbuilder

DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ===================
# Stripe Configuration
# ===================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# ===================
# Email Configuration
# ===================
# Option 1: SendGrid (recommended)
SENDGRID_API_KEY=SG....

# Option 2: SMTP (fallback)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=App-Builder

# ===================
# Redis (optional)
# ===================
# REDIS_URL=redis://localhost:6379/0

# ===================
# AI/LLM Configuration
# ===================
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ===================
# Monitoring
# ===================
# SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=INFO

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_PER_MINUTE=60
