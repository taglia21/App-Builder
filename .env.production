# =============================================================================
# LAUNCHFORGE PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env on your production server
# 2. Fill in ALL required values (marked with REQUIRED)
# 3. Generate secure secrets using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. Never commit .env to version control
#
# =============================================================================

# =============================================================================
# CORE SETTINGS (REQUIRED)
# =============================================================================

# Environment mode - MUST be "production" for production
ENVIRONMENT=production

# Debug mode - MUST be false in production
DEBUG=false

# Secret key for JWT tokens and session encryption (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY

# JWT token expiration in hours
JWT_EXPIRATION_HOURS=24

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================

# Full PostgreSQL connection URL (REQUIRED)
# Format: postgresql://user:password@host:port/database
# For cloud: postgresql://user:password@your-db-host.com:5432/launchforge?sslmode=require
DATABASE_URL=postgresql://launchforge:CHANGE_ME_PASSWORD@localhost:5432/launchforge

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# REDIS CONFIGURATION (REQUIRED)
# =============================================================================

# Redis URL for caching, sessions, and rate limiting
# Format: redis://[:password@]host:port/db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# STRIPE PAYMENTS (REQUIRED FOR BILLING)
# =============================================================================

# Stripe secret key (REQUIRED - use sk_live_ for production!)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_CHANGE_ME

# Stripe publishable key (for frontend)
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME

# Stripe webhook signing secret (REQUIRED for webhooks)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# Stripe price IDs for subscription plans
STRIPE_PRICE_PRO_MONTHLY=price_CHANGE_ME
STRIPE_PRICE_PRO_YEARLY=price_CHANGE_ME
STRIPE_PRICE_ENTERPRISE=price_CHANGE_ME

# =============================================================================
# AI/LLM PROVIDERS (AT LEAST ONE REQUIRED)
# =============================================================================

# OpenAI API (recommended primary)
OPENAI_API_KEY=sk-CHANGE_ME

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME

# Google AI (Gemini)
GOOGLE_API_KEY=CHANGE_ME

# Perplexity API (for research)
PERPLEXITY_API_KEY=pplx-CHANGE_ME

# Groq API (fast inference)
GROQ_API_KEY=gsk_CHANGE_ME

# Default LLM provider: openai, anthropic, google, groq
DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# INTELLIGENCE GATHERING (OPTIONAL BUT RECOMMENDED)
# =============================================================================

# Google Custom Search
GOOGLE_CSE_ID=CHANGE_ME

# Reddit API
REDDIT_CLIENT_ID=CHANGE_ME
REDDIT_CLIENT_SECRET=CHANGE_ME

# Twitter/X API
TWITTER_BEARER_TOKEN=CHANGE_ME

# NewsAPI
NEWSAPI_KEY=CHANGE_ME

# GitHub Token (for repo analysis)
GITHUB_TOKEN=ghp_CHANGE_ME

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED FOR NOTIFICATIONS)
# =============================================================================

# SMTP settings
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=CHANGE_ME
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM_EMAIL=noreply@launchforge.io
SMTP_FROM_NAME=LaunchForge

# =============================================================================
# MONITORING & LOGGING (RECOMMENDED)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# Sentry DSN for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=https://CHANGE_ME@sentry.io/CHANGE_ME

# Sentry environment name
SENTRY_ENVIRONMENT=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=launchforge.io,www.launchforge.io,app.launchforge.io

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://launchforge.io,https://www.launchforge.io,https://app.launchforge.io

# Rate limiting (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_GENERATION=20

# Session cookie settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# =============================================================================
# DEPLOYMENT PROVIDERS (OPTIONAL)
# =============================================================================

# Vercel deployment
VERCEL_TOKEN=CHANGE_ME

# Render deployment
RENDER_API_KEY=CHANGE_ME

# Railway deployment
RAILWAY_TOKEN=CHANGE_ME

# =============================================================================
# NOTIFICATION WEBHOOKS (OPTIONAL)
# =============================================================================

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME

# Discord webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/CHANGE_ME

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_AI_GENERATION=true
FEATURE_DEPLOYMENT=true
FEATURE_BUSINESS_FORMATION=true
FEATURE_BILLING=true

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

# Set to true to enable maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=LaunchForge is undergoing scheduled maintenance. We'll be back shortly!

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# S3-compatible backup storage
BACKUP_S3_BUCKET=launchforge-backups
BACKUP_S3_ACCESS_KEY=CHANGE_ME
BACKUP_S3_SECRET_KEY=CHANGE_ME
BACKUP_S3_ENDPOINT=https://s3.amazonaws.com
BACKUP_S3_REGION=us-east-1

# Backup retention (days)
BACKUP_RETENTION_DAYS=30
