# LaunchForge Production Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================================================
# DATABASE
# ==============================================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://launchforge:YOUR_PASSWORD@db.yourhost.com:5432/launchforge_prod

# ==============================================================================
# REDIS (for caching, sessions, rate limiting)
# ==============================================================================
REDIS_URL=redis://default:YOUR_PASSWORD@redis.yourhost.com:6379/0

# ==============================================================================
# STRIPE (payments)
# ==============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_YOUR_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_KEY_HERE
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_YOUR_SECRET_HERE

# ==============================================================================
# AI PROVIDER API KEYS
# ==============================================================================
# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_KEY_HERE

# Anthropic Claude - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE

# Google Gemini - Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=YOUR_KEY_HERE

# Perplexity (market research) - Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-YOUR_KEY_HERE

# Groq (fast inference) - Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_YOUR_KEY_HERE

# ==============================================================================
# SECURITY
# ==============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=GENERATE_RANDOM_256_BIT_KEY
SECRET_KEY=GENERATE_RANDOM_SECRET

# ==============================================================================
# EMAIL (Resend.com - recommended)
# ==============================================================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_YOUR_KEY_HERE
# Email address to send from (must be verified domain in Resend)
EMAIL_FROM=noreply@yourdomain.com

# Optional: SMTP fallback (if not using Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ==============================================================================
# ANALYTICS (Plausible.io - privacy-friendly)
# ==============================================================================
# Your Plausible domain (e.g., launchforge.dev)
PLAUSIBLE_DOMAIN=yourdomain.com
# Optional: Plausible API key for server-side events
# PLAUSIBLE_API_KEY=YOUR_KEY_HERE

# ==============================================================================
# ERROR TRACKING (Sentry)
# ==============================================================================
# Get from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
SENTRY_DSN=https://YOUR_KEY@sentry.io/PROJECT_ID

# ==============================================================================
# OAUTH PROVIDERS
# ==============================================================================
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_SECRET

# GitHub OAuth - Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=YOUR_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_SECRET

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Base URL for the application (used in emails, OAuth callbacks)
BASE_URL=https://yourdomain.com

# ==============================================================================
# RATE LIMITING
# ==============================================================================
# Requests per minute for API endpoints
RATE_LIMIT_PER_MINUTE=60
# Enable strict rate limiting (returns 429 vs just logging)
RATE_LIMIT_STRICT=true

# ==============================================================================
# BUSINESS SERVICES (optional)
# ==============================================================================
# Stripe Atlas for LLC formation (if using)
# STRIPE_ATLAS_API_KEY=YOUR_KEY_HERE

# Mercury Bank integration (if using)
# MERCURY_API_KEY=YOUR_KEY_HERE
